{
    "name": "mkroese/recipe-book",
    "description": "A recipe book project",
    "license": "MIT",
    "type": "application",
    "require": {
        "doctrine/orm": "^2.5",
        "php-di/php-di": "^5.4",
        "twig/twig": "^2.4",
        "components/bootstrap": "^3.3",
        "components/bootstrap-default": "^3.3",
        "robloach/component-installer": "^0.2.3",
        "php-di/slim-bridge": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "satooshi/php-coveralls": "^1.0"
    },
    "authors": [
        {
            "name": "Meindert-Jan Kroese",
            "email": "meindertjan@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Mkroese\\RecipeBook\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mkroese\\RecipeBook\\Test\\" : "test/"
        }
    },
    "config": {
        "component-dir": "web/components"
    }
}
