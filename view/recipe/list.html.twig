<table class="table table-hover">
  <thead>
  <tr>
    <th>id</th>
    <th colspan="2">title</th>
  </tr>
  </thead>
  <tbody>
  {% for recipe in recipes %}
    <tr>
      <td>{{ recipe.id }}</td>
      <td>{{ recipe.title }}</td>
      <td>
        <div class="pull-right btn-group">
          <a class="btn btn-default" href="edit-recipe.php?id={{ recipe.id }}">Edit</a>
          <a class="btn btn-default" onclick="return confirm('are you sure? it sure looks tasty!');" href="delete.php">
            <span class="glyphicon glyphicon-trash" />
          </a>
        </div>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
